/* miniprogram/pages/WelcomePage/welcomePage.wxss */

page {
  width: 100%;
  height: 100%;
  /* overflow: hidden; */
}
.container{
 flex-direction: column;
 display: flex;
}
.text-style{
  font-size: 25px;
  color: #FFA07A;
  font-family: "Lucida Sans";
  font-weight: bolder;
}

.first-row{
 /* flex-direction: row; */
 margin-top: 40rpx;
 width: 70%;
 display: flex;
 justify-content: flex-start;
 align-content: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color:#fff;
}

.userinfo-nickname-wrapper {
  flex: 1;
}

.img {
  width: 135rpx;
  height: 125rpx;
  margin: 30rpx;
  border-radius: 60%;
  background-size: cover;
  background-color: white;
  border-color: lightblue;
  border-style: solid;
}

.bgm {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -999;
}

.button-row {
  margin-top: 70px;
  flex-direction: row;
  display: flex;
  font-style: italic;
  justify-content: space-between;
  width: 90%;
  height: 100%;
}

.naviage-button {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: flex-end;
}




