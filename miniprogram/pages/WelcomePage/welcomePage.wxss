/* miniprogram/pages/WelcomePage/welcomePage.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.container{
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-size: cover;
  background:"../../images/blue_beach.JPG";
}
.text-style{
  font-size: 25px;
  color: goldenrod;
  font-family: "Lucida Sans";
  font-weight: bolder;
}

.first-row{
 /* flex-direction: row; */
 margin-top: 40rpx;
 height: 140rpx;
 width: 100%;
 border: none;
 border-left: none;
 border-right: none;
 display: flex;
 flex-direction: row;
 align-items: center;
 transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color:#fff;
}

.userinfo-nickname-wrapper {
  flex: 1;
}

.img {
  height: 50px;
  width: 50px;
  margin-left: 20%;
  border-radius: 100%;
}
